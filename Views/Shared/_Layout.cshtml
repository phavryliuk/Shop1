<div class="container mt">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>









<div class="container">
    <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
        <p class="col-md-4 mb-0 text-muted">Petro Havryliuk - 2022 &copy; All rights reserved. </p>

        <a href="/" class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
            <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"/></svg>
        </a>

        <ul class="nav col-md-4 justify-content-end">
                <li class="nav-item"><a href="https://localhost:44370/" class="nav-link px-2 text-muted">Домашня</a></li>
            <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Про нас</a></li>
            <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Вакансії</a></li>
            <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">ЧаПи</a></li>
                <li class="nav-item"><a href="https://localhost:44370/home/privacy" class="nav-link px-2 text-muted">Умови</a></li>
        </ul>
    </footer>
</div>








<script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", false)
