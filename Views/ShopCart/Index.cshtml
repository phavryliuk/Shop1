@model ShopCartViewModel
<div class="container">
    @foreach (var el in Model.ShopCart.listShopItems)
    {
        <div class="alert alert-warning mt-3">
            <b>Автомобіль:</b> @el.car.name<br/>
            <b>Ціна:</b> @el.car.price.ToString()<br/>
        </div>
    }
    <hr/>
    <a class="btn btn-danger mb-5" asp-controller="Order" asp-action="Checkout">Оформити замовлення</a>
    <a class="btn btn-success mb-5" asp-controller="Cars" asp-action="List">Продовжити покупки</a>
</div>